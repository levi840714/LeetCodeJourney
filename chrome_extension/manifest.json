
{
  "manifest_version": 3,
  "name": "LeetCode Journey",
  "version": "1.0",
  "description": "Log LeetCode problem submissions to Google Sheets.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "https://leetcode.com/problems/*",
    "http://127.0.0.1:5000/*",
    "https://*.cloudfunctions.net/*",
    "https://*.googleapis.com/*"
  ],
  "icons": {
    "16": "image/icon16.png",
    "48": "image/icon48.png",
    "128": "image/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "image/icon16.png",
      "48": "image/icon48.png",
      "128": "image/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://leetcode.com/problems/*"],
      "js": ["content_script.js"]
    }
  ]
}
